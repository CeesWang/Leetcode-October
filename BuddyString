class Solution {
    public boolean buddyStrings(String A, String B) {
        if (A.length() != B.length()) {
            return false;
        }
        int len = A.length();
        for (int i = 0; i < len-1; ++i) {   
            for (int j = i + 1; j < len; ++j) {
                if (isMatchAfterSwapping(A,B,i,j)) {
                    return true;
                }
            }
        }
        return false;
    }
    
    public boolean isMatchAfterSwapping (String A, String B, int idxA, int idxB) {
        StringBuilder sb = new StringBuilder(A); 
        sb.setCharAt(idxA, A.charAt(idxB)); 
        sb.setCharAt(idxB, A.charAt(idxA)); 
        return sb.toString().equals(B);
    }
}
